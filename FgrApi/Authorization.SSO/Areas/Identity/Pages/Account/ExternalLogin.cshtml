@page
@model ExternalLoginModel
@{
    ViewData["Title"] = "Test App log in";
}

<h2 class="text-center my-5">@ViewData["Title"]</h2>
<h5 class="text-center" id="external-login-title">Associate your @Model.ProviderDisplayName account.</h5>
<hr />
    <div class="row justify-content-center">
        <div class="col-md-6">
            <p id="external-login-description" class="text-info">
                You've successfully authenticated with <strong>@Model.ProviderDisplayName</strong>. <br /> <br />
@*                Please enter email address or just confirm that you agree to be identified for this site by email address below. <br /> <br />
                Administrator of your company have to permit all needed acceses for you in this system using email addres below. <br /> <br />
*@                Click the <strong>Proceed</strong> button to finish logging in.
            </p>
            <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Input.Email"></label>
                    <input asp-for="Input.Email" class="form-control" />
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-default">Proceed</button>
            </form>
        </div>
    </div>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }
